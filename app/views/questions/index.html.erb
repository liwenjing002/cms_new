     <%if alert%>
     <script type="text/javascript">
     alert(<%=alert%>)
     </script>
     <%end%>
     <%= javascript_include_tag :defaults %>
     <!-- Wrapper --> 
     <div id="page">
     <div class="wrapper">
       <!-- Left column/section --> 
       <section class="column  first" style ="width:880px;">
          <div id="add_user" class="dataTables_length">
             <%= link_to '新增问卷', new_question_path %></div>
             <div id="example_filter" class="dataTables_filter">
               <form action='/questions', method='get'>
                 根据问卷名称查找:
                 <input type="text" name = "title" value="<%=params[:title]%>">
                 <input type="submit" class="btn btn-green big" value="提交"></form>
             </div>
          <table class="display stylized" id="example">
           <thead>
                 <tr>
                   <th style="width: 100px;">问卷名称</th>
                   <th style="width: 50px; ">状态</th>
                    <th style="width: 50px; ">开始问卷</th>
                   <th style="width: 50px; ">编辑</th>
                   <th style="width: 50px; ">删除</th>
                   
                 </tr>
               </thead>
               <tbody>
                 <% @questions.each do |question| %>
                   <tr class="gradeA odd">
                    <td>
                       <%= question.name %></td>
                             <td>
                              <%if question.flage ==true%>生效<%else%>无效<%end%></td>
                              <td>
                              <%if question.flage ==true%> <%= link_to '开始问卷', "/question_bases/new?question_id=#{question.id}"%><%end%></td>
                               <td>
                                 <%= link_to '编辑', edit_question_path(question) %></td>
                                    <td>
                                   <%= link_to '删除', question, :confirm =>'Are you sure?', :method => :delete %></td>
                                 </tr>
                                 <%end%></tbody>
          </table>
           <%= will_paginate @question , :params =>{:title=> params[:title]} %>
          <div class="clear">&nbsp;</div>

                             </section>
                             <!-- End of Left column/section --> 

                             <!-- End of Right column/section --> </div>
                           <!-- End of Wrapper --> </div>
                         </div>

